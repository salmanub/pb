    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const header = document.getElementById('mainHeader');
            const menuButton = document.getElementById('menuButton');
            const mobileMenu = document.getElementById('mobileMenu');
            const showModalBtn = document.getElementById('showModal');
            const closeModalBtn = document.getElementById('closeModal');
            const modal = document.getElementById('contactModal');
            
            // Función para manejar cambios al hacer scroll
            const handleScroll = () => {
                if (window.scrollY > 50) {
                    header.classList.add('is-scrolled');
                } else {
                    header.classList.remove('is-scrolled');
                }
            };
            
            // Inicializar estado del header
            handleScroll();
            
            // Escuchar eventos de scroll
            window.addEventListener('scroll', handleScroll);
            
            // Manejo del menú móvil con toggle correcto
            if (menuButton && mobileMenu) {
                menuButton.addEventListener('click', function() {
                    mobileMenu.classList.toggle('mobile-menu-open');
                    
                    if (mobileMenu.classList.contains('mobile-menu-open')) {
                        document.body.style.overflow = 'hidden'; // Bloquear scroll
                        menuButton.innerHTML = `<svg class="menu-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>`;
                        menuButton.setAttribute('aria-expanded', 'true');
                    } else {
                        document.body.style.overflow = ''; // Restaurar scroll
                        menuButton.innerHTML = `<svg class="menu-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                        </svg>`;
                        menuButton.setAttribute('aria-expanded', 'false');
                    }
                });
            }
            
            // Show/hide modal
            if (showModalBtn && closeModalBtn && modal) {
                showModalBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    modal.classList.add('show');
                });
                
                closeModalBtn.addEventListener('click', function() {
                    modal.classList.remove('show');
                });
            }
            
            // Smooth scrolling for anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) {
                        window.scrollTo({
                            top: target.offsetTop - 120, // Adjusted for header height
                            behavior: 'smooth'
                        });
                    }
                });
            });
        });
    </script>
