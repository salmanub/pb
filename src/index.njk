    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Depuración para verificar que los elementos existen
            console.log("Header:", document.getElementById('mainHeader'));
            console.log("Menu Button:", document.getElementById('menuButton'));
            console.log("Mobile Menu:", document.getElementById('mobileMenu'));
            console.log("Talk to Expert:", document.getElementById('talkToExpert'));

            const header = document.getElementById('mainHeader');
            const menuButton = document.getElementById('menuButton');
            const mobileMenu = document.getElementById('mobileMenu');
            const talkToExpert = document.getElementById('talkToExpert');
            
            // Forzar visibilidad del menú hamburguesa en pantallas pequeñas
            if (menuButton) {
                menuButton.style.display = 'flex';
                menuButton.style.alignItems = 'center';
                menuButton.style.justifyContent = 'center'; 
                menuButton.style.zIndex = '1000';
            }
            
            // Asegurar que el botón flotante aparezca después de 300px de scroll
            window.addEventListener('scroll', function() {
                if (window.scrollY > 300 && window.innerWidth < 992) {
                    if (talkToExpert) {
                        talkToExpert.style.display = 'flex';
                    }
                } else {
                    if (talkToExpert) {
                        talkToExpert.style.display = 'none';
                    }
                }
            });
            
            // Forzar una evaluación inicial
            if (window.scrollY > 300 && window.innerWidth < 992) {
                if (talkToExpert) {
                    talkToExpert.style.display = 'flex';
                }
            }
            
            // Manejo del toggle del menú móvil
            if (menuButton && mobileMenu) {
                menuButton.addEventListener('click', function() {
                    console.log("Menú clickeado");
                    const isOpen = mobileMenu.classList.contains('mobile-menu-open');
                    
                    if (!isOpen) {
                        mobileMenu.classList.add('mobile-menu-open');
                        document.body.style.overflow = 'hidden';
                        menuButton.innerHTML = `<svg class="menu-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 24px; height: 24px;">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                        </svg>`;
                        if (talkToExpert) talkToExpert.style.display = 'none';
                    } else {
                        mobileMenu.classList.remove('mobile-menu-open');
                        document.body.style.overflow = '';
                        menuButton.innerHTML = `<svg class="menu-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="width: 24px; height: 24px;">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                        </svg>`;
                        if (talkToExpert && window.scrollY > 300 && window.innerWidth < 992) {
                            talkToExpert.style.display = 'flex';
                        }
                    }
                });
            }
            
            // Activar el botón flotante con un tiempo para asegurar que cargue todo
            setTimeout(function() {
                if (talkToExpert && window.scrollY > 300 && window.innerWidth < 992) {
                    talkToExpert.style.display = 'flex';
                    console.log("Botón de perito activado por timeout");
                }
            }, 1000);
        });
    </script>

