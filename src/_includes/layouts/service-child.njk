{% extends "layouts/base.njk" %}

{% block content %}
<!-- Hero Section - Simplified version for child pages -->
<header class="relative bg-gradient-to-br from-[#0B1030] to-[#1a2452] mt-[70px] lg:mt-[90px] overflow-hidden">
    <!-- Pattern Background -->
    <div aria-hidden="true" class="absolute inset-0">
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_1px_1px,slate-500_1px,transparent_1px)] bg-[size:40px_40px] opacity-[0.15]"></div>
    </div>

    <div class="container mx-auto px-4 sm:px-8 md:px-12 lg:px-16 relative z-10">
        <div class="py-16 lg:py-20">
            <!-- Breadcrumbs - Link back to pillar -->
            <div class="mb-8">
                <div class="flex items-center text-sm text-cyan-300/80">
                    <a href="/" class="hover:text-cyan-300 transition-colors">Inicio</a>
                    <svg class="mx-2 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                    <a href="{{ parentService.url }}" class="hover:text-cyan-300 transition-colors">{{ parentService.title }}</a>
                    <svg class="mx-2 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                    <span class="text-white">{{ title | truncate(30) }}</span>
                </div>
            </div>

            <!-- Main Title & Description -->
            <div class="max-w-3xl">
                <h1 class="text-[2.5rem] md:text-[3.5rem] font-light text-white leading-[1.1] tracking-tight mb-8">
                    {{ title }}
                    {% if subtitle %}
                    <span class="block text-[0.7em] text-cyan-400 font-normal mt-4">{{ subtitle }}</span>
                    {% endif %}
                </h1>
                
                <div class="prose prose-lg prose-invert">
                    {{ intro | safe }}
                </div>
                
                <!-- Key service features -->
                {% if keyFeatures %}
                <div class="mt-10 grid md:grid-cols-2 gap-6">
                    {% for feature in keyFeatures %}
                    <div class="flex items-start gap-3">
                        <span class="p-2 bg-cyan-500/20 rounded-lg">
                            <svg class="w-5 h-5 text-cyan-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                        </span>
                        <span class="text-white">{{ feature }}</span>
                    </div>
                    {% endfor %}
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<article class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-8 md:px-12 lg:px-16">
        <div class="flex flex-col lg:flex-row gap-16">
            <!-- Main Content -->
            <div class="lg:w-2/3">
                <div class="prose prose-lg max-w-none mb-12">
                    {{ content | safe }}
                </div>
                
                <!-- Testimonials - only if they exist -->
                {% if testimonials and testimonials.length > 0 %}
                <section class="mt-16 pt-12 border-t border-slate-200">
                    <h2 class="text-2xl md:text-3xl font-light text-slate-800 mb-8">Lo que dicen nuestros clientes</h2>
                    
                    <div class="grid md:grid-cols-2 gap-8">
                        {% for testimonial in testimonials %}
                        <div class="bg-white p-6 rounded-lg shadow border-l-4 border-cyan-400">
                            <p class="text-slate-700 mb-4 text-lg relative pl-6">
                                <span class="absolute top-[-1rem] left-[-0.5rem] text-[4rem] text-cyan-400/20 font-serif">"</span>
                                {{ testimonial.quote }}
                            </p>
                            <div class="flex items-center mt-auto pt-4">
                                <span class="w-10 h-[2px] bg-cyan-400/30 mr-4"></span>
                                <div>
                                    <p class="font-semibold text-cyan-500">{{ testimonial.author }}</p>
                                    {% if testimonial.role %}
                                    <p class="text-sm text-slate-500">{{ testimonial.role }}</p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </section>
                {% endif %}
                
                <!-- Related Problems - only if they exist -->
                {% if relatedProblems and relatedProblems.length > 0 %}
                <section class="mt-16 pt-12 border-t border-slate-200">
                    <h2 class="text-2xl md:text-3xl font-light text-slate-800 mb-8">Problemas relacionados</h2>
                    
                    <div class="grid md:grid-cols-2 gap-8">
                        {% for problem in relatedProblems %}
                        <div class="bg-white rounded-xl p-6 shadow border border-slate-100 hover:shadow-lg transition-all duration-300">
                            <h3 class="text-xl font-bold text-slate-800 mb-4">{{ problem.title }}</h3>
                            <p class="text-slate-600 mb-4">{{ problem.description }}</p>
                            <a href="{{ problem.url }}" class="inline-flex items-center text-cyan-600 hover:text-cyan-700 font-semibold group">
                                Más información
                                <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                                </svg>
                            </a>
                        </div>
                        {% endfor %}
                    </div>
                </section>
                {% endif %}
            </div>
            
            <!-- Sidebar -->
            <div class="lg:w-1/3">
                <div class="sticky top-24 space-y-10">
                    <!-- CTA Box -->
                    <div class="bg-gradient-to-br from-slate-50 to-white rounded-2xl shadow-lg border border-slate-100 p-6 lg:p-8">
                        <h2 class="text-xl font-bold text-slate-800 mb-4">¿Necesitas un informe pericial?</h2>
                        <p class="text-slate-600 mb-6">Contacta ahora para una evaluación gratuita de tu caso de {{ serviceTitle | lower }}</p>
                        
                        <div class="space-y-4">
                            <a href="/contacto/" class="block w-full text-center bg-cyan-500 text-white font-medium py-3 px-6 rounded-lg hover:bg-cyan-600 transition-colors">
                                Solicitar presupuesto
                            </a>
                            <a href="tel:+34932123456" class="block w-full text-center border border-cyan-500 text-cyan-500 font-medium py-3 px-6 rounded-lg hover:bg-cyan-50 transition-colors">
                                Llamar ahora
                            </a>
                        </div>
                    </div>
                    
                    <!-- Why Choose Us Box -->
                    <div class="bg-gradient-to-br from-slate-50 to-white rounded-2xl shadow-lg border border-slate-100 p-6 lg:p-8">
                        <h2 class="text-xl font-bold text-slate-800 mb-4">Por qué elegirnos</h2>
                        
                        <ul class="space-y-4">
                            {% for benefit in serviceBenefits %}
                            <li class="flex items-start gap-3">
                                <svg class="w-5 h-5 text-cyan-500 flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                </svg>
                                <span class="text-slate-600">{{ benefit }}</span>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                    
                    <!-- Service Process -->
                    <div class="bg-gradient-to-br from-slate-50 to-white rounded-2xl shadow-lg border border-slate-100 p-6 lg:p-8">
                        <h2 class="text-xl font-bold text-slate-800 mb-4">Nuestro proceso</h2>
                        
                        <div class="space-y-4">
                            {% for step in serviceProcess %}
                            <div class="flex items-start gap-3">
                                <div class="w-8 h-8 rounded-full bg-cyan-500/10 flex items-center justify-center text-cyan-500 font-bold flex-shrink-0">
                                    {{ loop.index }}
                                </div>
                                <div>
                                    <h3 class="font-medium text-slate-800">{{ step.title }}</h3>
                                    <p class="text-sm text-slate-600">{{ step.description }}</p>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</article>

<!-- CTA Section -->
<section class="py-16 lg:py-24 bg-gradient-to-br from-[#0B1030] to-[#1a2452] text-white">
    <div class="container mx-auto px-4 sm:px-8 md:px-12 lg:px-16">
        <div class="max-w-3xl mx-auto text-center">
            <h2 class="text-[2.5rem] md:text-[3rem] font-light mb-6">
                {{ ctaTitle | default("¿Necesitas un informe pericial especializado?") }}
            </h2>
            <p class="text-xl text-white/80 mb-10">{{ ctaDescription | default("Contacta ahora para una evaluación gratuita de tu caso") }}</p>
            
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="/contacto/" class="inline-flex items-center justify-center px-8 py-4 bg-cyan-400 text-white font-semibold rounded-lg hover:bg-cyan-500 transition-all group">
                    Solicitar presupuesto
                    <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                    </svg>
                </a>
                <a href="tel:+34932123456" class="inline-flex items-center justify-center px-8 py-4 border-2 border-cyan-400 text-cyan-400 font-semibold rounded-lg hover:bg-white/5 transition-all">
                    <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                    </svg>
                    Llamar ahora
                </a>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block pageStyles %}
 {% set childPageCSS %} {% include "dist/assets/styles/index.css" %} {% endset %}
<style>
.prose h2 {
    @apply text-2xl md:text-3xl font-light text-slate-800 mt-12 mb-6;
}

.prose h3 {
    @apply text-xl font-bold text-slate-800 mt-8 mb-4;
}

.prose p {
    @apply text-slate-600 mb-6;
}

.prose ul {
    @apply space-y-3 my-6;
}

.prose li {
    @apply flex items-start gap-2;
}

.prose li::before {
    content: '';
    @apply w-5 h-5 bg-cyan-500/10 rounded-full flex-shrink-0 mt-1;
}

.prose a {
    @apply text-cyan-600 hover:text-cyan-700 font-medium;
}

.prose img {
    @apply rounded-xl shadow-md my-8;
}

{{ childPageCSS | safe }}
</style>
{% endblock %}
