{% extends "layouts/base.njk" %}

{% block content %}
<main>
<!-- Hero Section - Simplified version for child pages -->
<header class="relative bg-gradient-to-br from-[#0B1030] to-[#1a2452] mt-[70px] lg:mt-[90px] overflow-hidden">
    <!-- Pattern Background -->
    <div aria-hidden="true" class="absolute inset-0">
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_1px_1px,slate-500_1px,transparent_1px)] bg-[size:40px_40px] opacity-[0.15]"></div>
    </div>

    <div class="container mx-auto px-4 sm:px-8 md:px-12 lg:px-16 relative z-10">
        <div class="py-16 lg:py-20">
            <!-- Breadcrumbs - Link back to pillar -->
            <div class="mb-8">
                <div class="flex items-center text-sm text-cyan-300/80">
                    <a href="/" class="hover:text-cyan-300 transition-colors">Inicio</a>
                    <svg class="mx-2 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                    <a href="{{ parentService.url }}" class="hover:text-cyan-300 transition-colors">{{ parentService.title }}</a>
                    <svg class="mx-2 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                    <span class="text-white">{{ title | truncate(30) }}</span>
                </div>
            </div>

            <!-- Main Title & Description - Improved layout with two columns on large screens -->
            <div class="grid lg:grid-cols-12 gap-12 items-center">
                <div class="lg:col-span-7">
                    <h1 class="text-[2.5rem] md:text-[3.5rem] font-light text-white leading-[1.1] tracking-tight mb-8">
                        {{ title }}
                        {% if subtitle %}
                        <span class="block text-[0.7em] text-cyan-300 font-normal mt-4">{{ subtitle }}</span>
                        {% endif %}
                    </h1>
                    
                    <div class="prose prose-lg prose-invert">
                        {{ intro | safe }}
                    </div>
                </div>
                
                <!-- Key service features in second column on large screens -->
                <div class="lg:col-span-5 lg:pl-8 lg:border-l lg:border-cyan-500/20">
                    {% if keyFeatures %}
                    <div class="mt-6 lg:mt-0 grid md:grid-cols-1 gap-6">
                        {% for feature in keyFeatures %}
                        <div class="flex items-start gap-3 bg-gradient-to-r from-white/10 to-transparent p-5 rounded-lg backdrop-blur-sm hover:from-white/15 hover:to-white/5 transition-colors transform hover:-translate-y-1 hover:shadow-lg hover:shadow-cyan-500/10 duration-300">
                            <span class="p-2 bg-cyan-500/30 rounded-lg">
                                <svg class="w-5 h-5 text-cyan-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                </svg>
                            </span>
                            <span class="text-white font-medium">{{ feature }}</span>
                        </div>
                        {% endfor %}
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<article class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4 sm:px-8 md:px-12 lg:px-16">
        <div class="flex flex-col lg:flex-row gap-16">
            <!-- Main Content -->
            <div class="lg:w-2/3">
                <div class="prose prose-lg max-w-none mb-12">
                    {{ content | safe }}
                </div>
                
                <!-- Testimonials - only if they exist -->
                {% if testimonials and testimonials.length > 0 %}
                <section class="mt-16 pt-12 border-t border-slate-200">
                    <h2 class="text-2xl md:text-3xl font-light text-slate-800 mb-8">Lo que dicen nuestros clientes</h2>
                    
                    <div class="grid md:grid-cols-2 gap-8">
                        {% for testimonial in testimonials %}
                        <div class="bg-gradient-to-br from-white to-slate-50 p-6 rounded-lg shadow-md border-l-4 border-cyan-400 hover:shadow-lg transition-all duration-300">
                            <p class="text-slate-700 mb-4 text-lg relative pl-6">
                                <span class="absolute top-[-1rem] left-[-0.5rem] text-[4rem] text-cyan-400/20 font-serif">"</span>
                                {{ testimonial.quote }}
                            </p>
                            <div class="flex items-center mt-auto pt-4">
                                <span class="w-10 h-[2px] bg-cyan-400/30 mr-4"></span>
                                <div>
                                    <p class="font-semibold text-cyan-600">{{ testimonial.author }}</p>
                                    {% if testimonial.role %}
                                    <p class="text-sm text-slate-500">{{ testimonial.role }}</p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </section>
                {% endif %}
                
                <!-- Related Problems - only if they exist -->
                {% if relatedProblems and relatedProblems.length > 0 %}
                <section class="mt-16 pt-12 border-t border-slate-200">
                    <h2 class="text-2xl md:text-3xl font-light text-slate-800 mb-8">Problemas relacionados</h2>
                    
                    <div class="grid md:grid-cols-2 gap-8">
                        {% for problem in relatedProblems %}
                        <div class="bg-gradient-to-br from-slate-50 to-white rounded-xl p-6 shadow-md border border-slate-100 hover:shadow-lg hover:border-cyan-100 transition-all duration-300">
                            <h3 class="text-xl font-bold text-slate-800 mb-4">{{ problem.title }}</h3>
                            <p class="text-slate-600 mb-4">{{ problem.description }}</p>
                            <a href="{{ problem.url }}" class="inline-flex items-center text-cyan-600 hover:text-cyan-700 font-semibold group">
                                Más información
                                <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                                </svg>
                            </a>
                        </div>
                        {% endfor %}
                    </div>
                </section>
                {% endif %}
            </div>
            
            <!-- Sidebar -->
            <div class="lg:w-1/3">
                <div class="sticky top-24 space-y-10">
                    <!-- CTA Box -->
                    <div class="bg-gradient-to-br from-cyan-50 to-white rounded-2xl shadow-lg border border-cyan-100 p-6 lg:p-8 hover:shadow-xl transition-all duration-300">
                        <h2 class="text-xl font-bold text-slate-800 mb-4">¿Necesitas un informe pericial?</h2>
                        <p class="text-slate-600 mb-6">Contacta ahora para una evaluación gratuita de tu caso de {{ serviceTitle | lower }}</p>
                        
                        <div class="space-y-4">
                            <a href="/contacto/" class="block w-full text-center bg-cyan-500 text-white font-medium py-3 px-6 rounded-lg hover:bg-cyan-600 transition-colors shadow-sm hover:shadow">
                                Solicitar presupuesto
                            </a>
                            <a href="tel:+34932123456" class="block w-full text-center border border-cyan-500 text-cyan-600 font-medium py-3 px-6 rounded-lg hover:bg-cyan-50 transition-colors">
                                <span class="flex items-center justify-center">
                                    <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                                    </svg>
                                    Llamar ahora
                                </span>
                            </a>
                        </div>
                    </div>
                    
                    <!-- Why Choose Us Box -->
                    <div class="bg-gradient-to-br from-slate-50 to-white rounded-2xl shadow-lg border border-slate-100 p-6 lg:p-8 hover:shadow-xl transition-all duration-300">
                        <h2 class="text-xl font-bold text-slate-800 mb-4">Por qué elegirnos</h2>
                        
                        <ul class="space-y-4">
                            {% for benefit in serviceBenefits %}
                            <li class="flex items-start gap-3 p-3 rounded-lg hover:bg-slate-50 transition-colors">
                                <svg class="w-5 h-5 text-cyan-500 flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                </svg>
                                <span class="text-slate-600">{{ benefit }}</span>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                    
                    <!-- Service Process -->
                    <div class="bg-gradient-to-br from-slate-50 to-white rounded-2xl shadow-lg border border-slate-100 p-6 lg:p-8 hover:shadow-xl transition-all duration-300">
                        <h2 class="text-xl font-bold text-slate-800 mb-4">Nuestro proceso</h2>
                        
                        <div class="space-y-4">
                            {% for step in serviceProcess %}
                            <div class="flex items-start gap-3 p-3 rounded-lg hover:bg-slate-50 transition-colors">
                                <div class="w-8 h-8 rounded-full bg-cyan-500/10 flex items-center justify-center text-cyan-600 font-bold flex-shrink-0 shadow-sm">
                                    {{ loop.index }}
                                </div>
                                <div>
                                    <h3 class="font-medium text-slate-800">{{ step.title }}</h3>
                                    <p class="text-sm text-slate-600">{{ step.description }}</p>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</article>

<!-- CTA Section -->
<section class="py-16 lg:py-24 bg-gradient-to-br from-[#0B1030] to-[#1a2452] text-white relative overflow-hidden">
    <!-- Pattern Background -->
    <div aria-hidden="true" class="absolute inset-0">
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_1px_1px,slate-500_1px,transparent_1px)] bg-[size:40px_40px] opacity-[0.1]"></div>
    </div>
    
    <div class="container mx-auto px-4 sm:px-8 md:px-12 lg:px-16 relative z-10">
        <div class="max-w-3xl mx-auto text-center">
            <h2 class="text-[2.5rem] md:text-[3rem] font-light mb-6">
                {{ ctaTitle | default("¿Necesitas un informe pericial especializado?") }}
            </h2>
            <p class="text-xl text-white/80 mb-10">{{ ctaDescription | default("Contacta ahora para una evaluación gratuita de tu caso") }}</p>
            
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="/contacto/" class="inline-flex items-center justify-center px-8 py-4 bg-cyan-400 text-white font-semibold rounded-lg hover:bg-cyan-500 transition-all group shadow-lg shadow-cyan-500/20 hover:shadow-cyan-500/30">
                    Solicitar presupuesto
                    <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                    </svg>
                </a>
                <a href="tel:+34932123456" class="inline-flex items-center justify-center px-8 py-4 border-2 border-cyan-400 text-cyan-300 font-semibold rounded-lg hover:bg-white/5 transition-all">
                    <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                    </svg>
                    Llamar ahora
                </a>
            </div>
        </div>
    </div>
</section>
</main>
{% endblock %}

{% block pageStyles %}
 {% set childPageCSS %} {% include "dist/assets/styles/index.css" %} {% endset %}
<style>
/* Estilos avant-garde para el contenido Markdown */
.prose {
    @apply text-slate-600 max-w-none;
    font-size: 1.125rem;
    line-height: 1.75;
}

/* Encabezados con estilo avant-garde */
.prose h2 {
    @apply text-2xl md:text-3xl font-light text-slate-800 mt-16 mb-8 relative;
    padding-left: 1.5rem;
    line-height: 1.2;
}

.prose h2::before {
    content: '';
    @apply absolute left-0 top-0 bottom-0 w-1 bg-gradient-to-b from-cyan-400 to-cyan-600 rounded-full;
}

.prose h3 {
    @apply text-xl font-bold text-slate-800 mt-10 mb-6 relative;
    padding-left: 1rem;
}

.prose h3::before {
    content: '';
    @apply absolute left-0 top-1/4 bottom-1/4 w-[3px] bg-cyan-500/50 rounded-full;
}

.prose h4 {
    @apply text-lg font-bold text-cyan-700 mt-8 mb-4 inline-block;
    background: linear-gradient(to bottom, transparent 70%, rgba(8, 145, 178, 0.15) 70%);
}

/* Párrafos y texto con estilo modern */
.prose p {
    @apply text-slate-600 mb-8 leading-relaxed;
}

.prose strong {
    @apply text-slate-800 font-semibold;
    background: linear-gradient(to bottom, transparent 60%, rgba(8, 145, 178, 0.1) 60%);
    padding: 0 0.1em;
}

.prose em {
    @apply text-slate-700 italic;
}

/* Bloques de cita estilizados */
.prose blockquote {
    @apply pl-8 border-l-0 my-12 py-4 px-6 text-slate-700 bg-slate-50 rounded-xl italic relative;
    box-shadow: 0 10px 30px -15px rgba(0, 0, 0, 0.1);
}

.prose blockquote::before {
    content: '';
    @apply absolute left-0 top-0 bottom-0 w-1 bg-gradient-to-b from-cyan-400 via-cyan-500 to-cyan-400 rounded-full;
}

.prose blockquote p {
    @apply mb-0;
}

/* Listas modernas con alineación vertical corregida */
.prose ul {
    @apply space-y-6 my-8 ml-0 list-none;
}

.prose ol {
    @apply space-y-6 my-8 ml-0;
    counter-reset: item;
    list-style-type: none;
}

.prose li {
    @apply text-slate-600 relative pl-10 ml-0;
    position: relative;
    display: flex;
    flex-direction: column;
}

.prose ul > li {
    @apply px-6 py-3 rounded-lg transition-all duration-300;
    background: linear-gradient(to right, rgba(8, 145, 178, 0.03) 0%, transparent 100%);
}

.prose ul > li:hover {
    background: linear-gradient(to right, rgba(8, 145, 178, 0.07) 0%, transparent 100%);
}

/* Corrección de alineación vertical para marcadores de lista */
.prose ul > li::before {
    content: '';
    @apply w-7 h-7 rounded-full flex-shrink-0 bg-gradient-to-br from-cyan-400 to-cyan-500 absolute left-0 opacity-10;
    top: 0.75rem; /* Alineación vertical mejorada */
}

.prose ul > li::after {
    content: '';
    @apply w-3 h-3 rounded-full flex-shrink-0 bg-cyan-500 absolute left-2;
    top: calc(0.75rem + 0.5rem); /* Alineación vertical mejorada y centrada */
}

.prose ol > li {
    counter-increment: item;
    @apply px-6 py-3 rounded-lg transition-all duration-300;
    background: linear-gradient(to right, rgba(8, 145, 178, 0.03) 0%, transparent 100%);
}

.prose ol > li:hover {
    background: linear-gradient(to right, rgba(8, 145, 178, 0.07) 0%, transparent 100%);
}

/* Corrección para números en listas ordenadas */
.prose ol > li::before {
    content: counter(item);
    @apply w-7 h-7 rounded-full flex-shrink-0 bg-cyan-500/10 absolute left-0 text-cyan-600 font-bold text-center text-sm;
    top: 0.75rem; /* Alineación vertical mejorada */
    line-height: 1.75rem; /* Centra el número verticalmente */
}

/* Estilos para contenido de lista con párrafos múltiples */
.prose li p {
    @apply mb-3;
    display: block;
    width: 100%;
}

.prose li p:first-child {
    margin-top: 0;
}

.prose li p:last-child {
    @apply mb-0;
}

/* Mejora de alineación para listas con contenido extenso */
.prose li > * {
    width: 100%;
}

/* Corrección para asegurar que el contenido esté alineado */
.prose li > ul,
.prose li > ol {
    @apply my-3 ml-0;
}

/* Corrección específica para listas anidadas */
.prose li > ul > li::before,
.prose li > ol > li::before {
    top: 0.75rem;
}

.prose li > ul > li::after {
    top: calc(0.75rem + 0.5rem);
}

/* Mejora para listas con contenido mixto */
.prose li > blockquote,
.prose li > figure,
.prose li > pre,
.prose li > div {
    @apply my-3;
    width: 100%;
}

/* Corrección para espaciado entre elementos de lista */
.prose li + li {
    @apply mt-4;
}

/* Ajuste para el tema oscuro */
.prose-invert {
    @apply text-white/90;
}

.prose-invert h2, 
.prose-invert h3, 
.prose-invert h4, 
.prose-invert strong {
    @apply text-white;
}

.prose-invert h2::before,
.prose-invert h3::before {
    @apply bg-cyan-300;
}

.prose-invert a {
    @apply text-cyan-300 hover:text-white;
    background-image: linear-gradient(to right, rgba(103, 232, 249, 0.4), rgba(103, 232, 249, 0.4));
}

.prose-invert strong {
    background: linear-gradient(to bottom, transparent 60%, rgba(103, 232, 249, 0.2) 60%);
}

.prose-invert ul > li,
.prose-invert ol > li {
    background: linear-gradient(to right, rgba(103, 232, 249, 0.1) 0%, transparent 100%);
}

.prose-invert ul > li:hover,
.prose-invert ol > li:hover {
    background: linear-gradient(to right, rgba(103, 232, 249, 0.2) 0%, transparent 100%);
}

.prose-invert ul > li::before {
    @apply bg-gradient-to-br from-cyan-300 to-cyan-400 opacity-20;
}

.prose-invert ul > li::after {
    @apply bg-cyan-300;
}

.prose-invert ol > li::before {
    @apply bg-cyan-400/20 text-cyan-300;
}

.prose-invert code {
    @apply bg-white/10 text-cyan-200;
}

/* Correcciones adicionales para la visualización correcta */
.prose ul li,
.prose ol li {
    position: relative;
}

.prose li + li {
    @apply mt-4;
}

/* Animaciones y efectos avant-garde */
@keyframes gradient-shift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
}

.prose-gradient-text {
    @apply text-transparent bg-clip-text;
    background-image: linear-gradient(90deg, #06b6d4, #0891b2, #0e7490);
    background-size: 200% auto;
    animation: gradient-shift 4s ease infinite;
}

{{ childPageCSS | safe }}
</style>
{% endblock %}
