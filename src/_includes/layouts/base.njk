<!DOCTYPE html>
<html lang="{{lang}}" itemscope itemtype="https://schema.org/WebPage">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{ title }}</title>
    <link rel="icon" href="data:image/svg+xml,%3Csvg xmlns=\'http://www.w3.org/2000/svg\' viewBox=\'0 0 375 375\' width=\'48\' height=\'48\'%3E%3Cpath fill=\'%2300B8D4\' d=\'M 314.597656 37.496094 L 314.597656 337.332031 L 223.109375 337.332031 L 223.109375 37.496094 Z M 314.597656 37.496094\'/%3E%3Cpath fill=\'%2300B8D4\' d=\'M 146.625 249.945312 L 146.625 37.496094 L 223.117188 37.496094 L 223.117188 249.945312 Z M 146.625 249.945312\'/%3E%3Cpath fill=\'%2300B8D4\' d=\'M 177.742188 111.523438 L 177.742188 291.515625 L 112.101562 291.515625 L 112.101562 111.523438 Z M 177.742188 111.523438\'/%3E%3Cpath fill=\'%2300B8D4\' d=\'M 60.398438 237.410156 L 60.398438 111.570312 L 112.109375 111.570312 L 112.109375 237.410156 Z M 60.398438 237.410156\'/%3E%3C/svg%3E" />

    <meta name="description" content="{{description}}">
    {% block pageStyles %}{% endblock pageStyles %}
    {% favicons %}
</head>
<body itemscope itemtype="https://schema.org/WebPage">
    <header>
        <meta itemprop="name" content="{{ title }}">
        <meta itemprop="description" content="{{ description }}">
        <meta itemprop="url" content="{{ metadata.site.url }}">
    </header>

    {% include "partials/navBar.njk" %}
    
    {% block content %}
    {% endblock content %}

    {% include "partials/footer.njk" %}

    <!-- Schema for LocalBusiness -->
    <div itemscope itemtype="https://schema.org/LocalBusiness" hidden>
        <meta itemprop="name" content="Perito Barcelona">
        <meta itemprop="description" content="Expertos en peritajes técnicos y resolución de conflictos legales en construcción.">
        <meta itemprop="url" content="{{ metadata.site.url }}{{ page.permalink }}">
        <meta itemprop="telephone" content="{{ metadata.contact.phoneNumber }}">
        <meta itemprop="email" content="{{ metadata.contact.email }}">
        <meta itemprop="address" content="C/ Numancia 95, Local 5, 08029 Barcelona, España">
        <meta itemprop="priceRange" content="€€">
        <div itemprop="address" itemscope itemtype="https://schema.org/PostalAddress">
            <meta itemprop="streetAddress" content="C/ Numancia 95, Local 5">
            <meta itemprop="addressLocality" content="Barcelona">
            <meta itemprop="addressRegion" content="Cataluña">
            <meta itemprop="postalCode" content="08029">
            <meta itemprop="addressCountry" content="ES">
        </div>
        <meta itemprop="geo" itemscope itemtype="https://schema.org/GeoCoordinates">
        <meta itemprop="latitude" content="41.3850643">
        <meta itemprop="longitude" content="2.136047">
        <meta itemprop="openingHours" content="Mo-Fr 09:00-18:00">
    </div>

    <!-- Schema for Author -->
    <div itemscope itemtype="https://schema.org/Person" hidden>
        <meta itemprop="name" content="Equipo Perito Barcelona">
        <meta itemprop="email" content="{{ metadata.contact.email }}">
        <meta itemprop="telephone" content="{{ metadata.contact.phoneNumber }}">
    </div>

    <!-- Social Media Links -->
    <div itemprop="sameAs" hidden>
        <link href="https://www.facebook.com/peritobarcelona" rel="nofollow">
        <link href="https://www.linkedin.com/company/peritobarcelona" rel="nofollow">
        <link href="https://twitter.com/peritobarcelona" rel="nofollow">
    </div>
    
    {% block scripts %}
    {% include "partials/head.njk" %}
    
        <script>
        if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
            navigator.serviceWorker.register('/service-worker.js');
        });
        }
        </script>
    {% endblock scripts %}
</body>
</html>
