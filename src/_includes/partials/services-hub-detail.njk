<section id="servicios-construccion-detallados">
    <div class="max-w-[1200px] mx-auto">
        <div class="max-w-3xl mx-auto text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-slate-800 mb-6">
                {{ services_hub.title }}
            </h2>
            <p class="text-lg text-slate-600">
                {{ services_hub.intro }}
            </p>
        </div>

        <div class="space-y-16">
            {% for service in services_hub.services %}
                <div class="servicio-item grid grid-cols-1 md:grid-cols-12 gap-6 md:gap-10 items-center">
                    {% if service.order == "normal" %}
                        <div class="md:col-span-4">
                            <img src="{{ service.image }}" alt="{{ service.title }}" class="rounded-lg shadow-md w-full object-cover aspect-video">
                        </div>
                        <div class="md:col-span-8">
                            <h3 class="text-2xl font-semibold text-cyan-700 mb-4">{{ service.title }}</h3>
                            <p class="text-slate-600 mb-5 leading-relaxed">{{ service.description }}</p>
                            <a href="{{ service.url }}" class="inline-flex items-center text-cyan-600 hover:text-cyan-800 font-medium group">
                                {{ service.cta_text }}
                                <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                                </svg>
                            </a>
                        </div>
                    {% else %}
                        <div class="md:col-span-8 md:order-1">
                            <h3 class="text-2xl font-semibold text-cyan-700 mb-4">{{ service.title }}</h3>
                            <p class="text-slate-600 mb-5 leading-relaxed">{{ service.description }}</p>
                            <a href="{{ service.url }}" class="inline-flex items-center text-cyan-600 hover:text-cyan-800 font-medium group">
                                {{ service.cta_text }}
                                <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                                </svg>
                            </a>
                        </div>
                        <div class="md:col-span-4 md:order-2">
                            <img src="{{ service.image }}" alt="{{ service.title }}" class="rounded-lg shadow-md w-full object-cover aspect-video">
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
        
        <div class="mt-16 text-center">
            <a href="/contacto/" class="inline-flex items-center px-8 py-4 bg-cyan-500 text-white font-semibold rounded-lg hover:bg-cyan-600 transition-all group">
                Consultar tu caso espec√≠fico
                <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
            </a>
        </div>
    </div>
</section>
