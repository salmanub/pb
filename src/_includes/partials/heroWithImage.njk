<header class="relative pt-16 sm:pt-12 md:pt-12 lg:pt-[120px] min-h-screen lg:h-screen bg-gradient-to-br from-[#0B1030] to-[#1a2452] text-white overflow-hidden">
    <div class="relative z-10 w-full min-h-[calc(100vh-70px)] lg:h-[calc(100vh-120px)] flex items-center">
        <div class="w-full px-4 sm:px-8 md:px-12 lg:px-0 md:w-[95%] max-w-[1400px] md:mx-auto lg:ml-[5%] py-8 md:py-12 lg:py-8">
            <!-- Hero Content - ajustado espaciado vertical -->
            <div class="flex flex-col items-center md:items-center lg:items-start w-full lg:w-[70%] space-y-10 md:space-y-12 lg:space-y-16 mx-auto lg:mx-0">
                <!-- Hero tag y título - más arriba -->
                <div class="space-y-12 md:space-y-16 w-full">
                    <!-- Hero tag -->
                    <span class="flex justify-center md:justify-start items-center text-sm md:text-base font-semibold tracking-[2px] uppercase text-cyan-400">
                        <span class="hidden lg:block w-8 h-0.5 bg-cyan-400 mr-3"></span>
                       {{ hero.tag }}
                    </span>

                    <!-- Headline -->
                    <div class="text-center md:text-left w-full md:max-w-[90%] lg:max-w-[85%] xl:max-w-[80%]">
                        <h1 class="text-[2.5rem] md:text-[3.5rem] lg:text-[4.2rem] xl:text-[4.8rem] 2xl:text-[5.2rem] font-light leading-[1.1] tracking-tight whitespace-normal lg:whitespace-nowrap">
                            INFORMES PERICIALES
                            <strong id="heroTextRotator" class="block text-cyan-400 mt-6 text-[1.2em] transition-opacity duration-500">QUE GANAN CASOS</strong>
                        </h1>
                    </div>
                </div>

                <!-- Contenido central con espaciado reducido -->
                <div class="space-y-8 md:space-y-10 lg:space-y-12 w-full">
                    <!-- Trust badges -->
                    <div class="w-full max-w-xl mx-auto lg:ml-0">
                        <div class="flex flex-col sm:flex-row gap-4 w-full justify-center lg:justify-start">
                            <div class="inline-flex items-center px-6 py-3 bg-white/10 rounded-full w-full sm:w-auto justify-center">
                                <svg class="w-5 h-5 text-cyan-400 mr-3" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
                                </svg>
                                <span>Nº1 EN PERITAJES</span>
                            </div>
                            <div class="inline-flex items-center px-6 py-3 bg-white/10 rounded-full w-full sm:w-auto justify-center">
                                <div class="text-yellow-400 tracking-wider mr-3">★★★★★</div>
                                <span>4.9/5 en Google</span>
                            </div>
                        </div>
                    </div>

                    <!-- CTAs y Métricas -->
                    <div class="space-y-12 w-full sm:max-w-2xl md:max-w-3xl mx-auto lg:mx-0">
                        <!-- CTAs -->
                        <div class="flex flex-col sm:flex-row gap-4">
                            <a href="/contacto" 
                               class="flex-1 inline-flex items-center justify-center px-4 sm:px-8 py-4 bg-cyan-400 text-white font-semibold uppercase tracking-wider rounded-lg shadow-lg hover:bg-cyan-500 transition-all duration-300 text-sm sm:text-base whitespace-nowrap">
                                SOLICITAR PRESUPUESTO
                            </a>
                            <a href="tel:{{metadata.contact.phoneNumber}}" 
                               class="flex-1 inline-flex items-center justify-center px-4 sm:px-8 py-4 border-2 border-cyan-400 text-cyan-400 font-semibold uppercase tracking-wider rounded-lg hover:bg-cyan-400/10 transition-all duration-300 text-sm sm:text-base whitespace-nowrap">
                                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 a2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                                </svg>
                                HABLAR CON UN PERITO
                            </a>
                        </div>

                        <!-- Métricas -->
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                            <div class="flex items-center gap-4 p-4 bg-white/5 rounded-xl">
                                <div class="text-2xl md:text-3xl font-extrabold text-cyan-400 leading-none">97%</div>
                                <div class="flex flex-col gap-1">
                                    <strong class="text-base md:text-lg text-white">Casos Exitosos</strong>
                                    <span class="text-sm text-white/70">En tribunales</span>
                                </div>
                            </div>
                            <div class="flex items-center gap-4 p-4 bg-white/5 rounded-xl">
                                <div class="text-2xl md:text-3xl font-extrabold text-cyan-400 leading-none">24h</div>
                                <div class="flex flex-col gap-1">
                                    <strong class="text-base md:text-lg text-white">Respuesta</strong>
                                    <span class="text-sm text-white/70">Garantizada</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Logos y texto - con padding inferior ajustado -->
                <div class="mt-auto pt-6 lg:pt-8 border-t border-white/10 w-full max-w-2xl mx-auto md:mx-0 pb-4 lg:pb-8">
                    <div class="flex flex-col lg:flex-row items-center gap-6 xl:gap-8">
                        <div class="flex items-center justify-center lg:justify-start gap-6 xl:gap-8">
                            <img src="/assets/images/logos/logo_ECCAT.avif" 
                                 alt="Col·legi de l'Enginyeria Civil de Catalunya" 
                                 class="h-8 lg:h-10 w-auto brightness-0 invert opacity-70 hover:opacity-100 hover:-translate-y-0.5 transition-all object-contain" 
                                 loading="lazy">
                            <img src="/assets/images/logos/INESE_Formación_CMYK.avif" 
                                 alt="INESE" 
                                 class="h-8 lg:h-10 w-auto brightness-0 invert opacity-70 hover:opacity-100 hover:-translate-y-0.5 transition-all object-contain" 
                                 loading="lazy">
                            <img src="/assets/images/logos/upc-logo.svg" 
                                 alt="Universitat politècnica de catalunya" 
                                 class="h-8 lg:h-10 w-auto brightness-0 invert opacity-70 hover:opacity-100 hover:-translate-y-0.5 transition-all object-contain" 
                                 loading="lazy">
                        </div>
                        <p class="text-white/60 text-sm text-center lg:text-left flex items-center">
                            Informes aceptados por todos los tribunales españoles
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Indicador de Scroll -->
    <div class="hidden lg:flex flex-col items-center absolute bottom-8 left-1/2 -translate-x-1/2 z-20 animate-bounce">
        <span class="text-white/60 text-sm mb-2">Descubre más</span>
        <svg class="w-6 h-6 text-cyan-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
        </svg>
    </div>

    <!-- Hero Image - Ajustado margen izquierdo -->
    <div class="hidden lg:block absolute top-0 right-0 w-[45%] h-full z-[1]">
        <picture class="h-full">
            <source media="(min-width: 992px)" srcset="/assets/images/perito-construccion-obra-edificacion-1280.avif">
            <source media="(min-width: 768px)" srcset="/assets/images/perito-construccion-obra-edificacion-768.avif">
            <img
                src="/assets/images/perito-construccion-obra-edificacion-640.avif"
                alt="Perito experto realizando inspección técnica"
                class="w-full h-full object-cover opacity-80"
                style="clip-path: polygon(150px 0, 100% 0, 100% 100%, 50px 100%);"
                loading="lazy"
                width="100%"
                height="100%"
                decoding="async">
        </picture>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const phrases = [
                "QUE GANAN CASOS",
                "QUE RESUELVEN CONFLICTOS",
                "QUE MARCAN LA DIFERENCIA",
                "CON RIGOR TÉCNICO"
            ];
            
            const rotator = document.getElementById('heroTextRotator');
            let currentIndex = 0;
            
            function rotateText() {
                rotator.style.opacity = '0';
                
                setTimeout(() => {
                    currentIndex = (currentIndex + 1) % phrases.length;
                    rotator.textContent = phrases[currentIndex];
                    rotator.style.opacity = '1';
                }, 500);
            }

            // Cambiar cada 4 segundos
            setInterval(rotateText, 4000);
        });
    </script>
</header>

<!-- Hero Image - Mobile -->
<div class="lg:hidden relative w-full h-[300px]">
    <img
        src="/assets/images/perito-construccion-obra-edificacion-640.avif"
        alt="Perito experto realizando inspección técnica"
        class="w-full h-full object-cover opacity-80"
        loading="eager"
        decoding="async">
</div>