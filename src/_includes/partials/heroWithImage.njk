{% block content %}

<header class="relative mt-[70px] lg:mt-[120px] h-auto lg:min-h-[calc(100vh-120px)] bg-gradient-to-br from-[#0B1030] to-[#1a2452] text-white overflow-hidden">
    <div class="relative z-10 w-full h-auto lg:h-[calc(100vh-120px)] flex items-center">
        <div class="w-full px-4 sm:px-8 md:px-12 lg:px-0 md:w-[95%] max-w-[1400px] md:mx-auto lg:ml-[5%] py-8 md:py-12 lg:py-8">
            <!-- Hero Content - ajustado espaciado vertical -->
            <div class="flex flex-col items-center md:items-center lg:items-start w-full lg:w-[70%] space-y-10 md:space-y-12 lg:space-y-16 mx-auto lg:mx-0">
                <!-- Hero tag y título -->
                <div class="w-full mb-12 md:mb-14 lg:mb-16">
                    <h1 class="flex justify-center md:justify-start items-center text-sm md:text-base font-semibold tracking-[2px] uppercase text-cyan-400 mb-10 md:mb-12" itemprop="headline">
                        <span class="hidden lg:block w-8 h-0.5 bg-cyan-400 mr-3"></span>
                        {{ hero.tag }}
                    </h1>

                    <!-- Headline con altura fija para el texto rotativo -->
                    <div class="text-center md:text-left">
                        <div class="text-[2.25rem] md:text-[3rem] lg:text-[3.75rem] xl:text-[4.25rem] font-light leading-[1.1] tracking-tight" itemprop="description">
                            INFORMES PERICIALES
                            <div class="min-h-[2.4em] lg:min-h-[2.8em] flex items-start mt-4 md:mt-6">
                                <strong id="heroTextRotator" class="block text-cyan-400 transition-opacity duration-500 leading-[1.2]">CON RIGOR TÉCNICO</strong>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Contenido central con espaciado mejorado -->
                <div class="w-full max-w-2xl lg:max-w-3xl mb-8 lg:mb-12">
                    <!-- CTAs -->
                    <div class="flex flex-col sm:flex-row gap-3 md:gap-4 mb-6 md:mb-8">
                        <a href="/contacto" 
                           class="flex-1 inline-flex items-center justify-center px-4 sm:px-8 py-4 bg-cyan-400 text-white font-semibold uppercase tracking-wider rounded-lg shadow-lg hover:bg-cyan-500 transition-all duration-300 text-sm sm:text-base whitespace-nowrap">
                            SOLICITAR PRESUPUESTO
                        </a>
                        <a href="tel:{{metadata.contact.phoneNumber}}" 
                           class="flex-1 inline-flex items-center justify-center px-4 sm:px-8 py-4 border-2 border-cyan-400 text-cyan-400 font-semibold uppercase tracking-wider rounded-lg hover:bg-cyan-400/10 transition-all duration-300 text-sm sm:text-base whitespace-nowrap">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 a2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                            </svg>
                            HABLAR CON UN PERITO
                        </a>
                    </div>

                    <!-- Métricas con padding reducido -->
                    <div class="grid grid-cols-2 gap-2 md:gap-3">
                        <div class="flex items-center gap-3 p-3 md:p-4 bg-white/5 rounded-lg">
                            <div class="text-xl md:text-2xl font-extrabold text-cyan-400 leading-none">97%</div>
                            <div class="flex flex-col">
                                <strong class="text-sm md:text-base text-white leading-tight">Casos Exitosos</strong>
                                <span class="text-xs text-white/70">En tribunales</span>
                            </div>
                        </div>
                        <div class="flex items-center gap-3 p-3 md:p-4 bg-white/5 rounded-lg">
                            <div class="text-xl md:text-2xl font-extrabold text-cyan-400 leading-none">24h</div>
                            <div class="flex flex-col">
                                <strong class="text-sm md:text-base text-white leading-tight">Respuesta</strong>
                                <span class="text-xs text-white/70">Garantizada</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Logos y texto - con espaciado reducido -->
                <div class="mt-auto pt-4 lg:pt-6 border-t border-white/10 w-full max-w-2xl mx-auto md:mx-0 pb-2 lg:pb-4">
                    <div class="flex flex-col lg:flex-row items-center gap-6 xl:gap-8">
                        <div class="flex items-center justify-center lg:justify-start gap-6 xl:gap-8">
                            <img src="/assets/images/logos/logo_ECCAT.avif" 
                                 alt="Col·legi de l'Enginyeria Civil de Catalunya" 
                                 class="h-8 lg:h-10 w-auto brightness-0 invert opacity-70 hover:opacity-100 hover:-translate-y-0.5 transition-all object-contain" 
                                 loading="lazy"
                                 width="100"
                                 height="40">
                            <img src="/assets/images/logos/INESE_Formación_CMYK.avif" 
                                 alt="INESE" 
                                 class="h-8 lg:h-10 w-auto brightness-0 invert opacity-70 hover:opacity-100 hover:-translate-y-0.5 transition-all object-contain" 
                                 loading="lazy"
                                 width="100"
                                 height="40">
                            <img src="/assets/images/logos/upc-logo.svg" 
                                 alt="Universitat politècnica de catalunya" 
                                 class="h-8 lg:h-10 w-auto brightness-0 invert opacity-70 hover:opacity-100 hover:-translate-y-0.5 transition-all object-contain" 
                                 loading="lazy"
                                 width="100"
                                 height="40">
                        </div>
                        <p class="text-white/60 text-sm text-center lg:text-left flex items-center">
                            Informes aceptados por todos los tribunales españoles
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Indicador de Scroll -->
    <div class="hidden lg:flex flex-col items-center absolute bottom-8 left-1/2 -translate-x-1/2 z-20 animate-bounce">
        <span class="text-white/60 text-sm mb-2">Descubre más</span>
        <svg class="w-6 h-6 text-cyan-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
        </svg>
    </div>

    <!-- Hero Image - Ajustado margen izquierdo -->
    <div class="hidden lg:block absolute top-0 right-0 w-[45%] h-full z-[1]">
        <picture class="h-full">
            <source media="(min-width: 992px)" srcset="/assets/images/perito-construccion-obra-edificacion-1280.avif" itemprop="image">
            <source media="(min-width: 768px)" srcset="/assets/images/perito-construccion-obra-edificacion-768.avif" itemprop="image">
            <img
                src="/assets/images/perito-construccion-obra-edificacion-640.avif"
                alt="Perito experto realizando inspección técnica"
                class="w-full h-full object-cover opacity-80"
                style="clip-path: polygon(150px 0, 100% 0, 100% 100%, 50px 100%);"
                loading="eager"
                width="100%"
                height="100%"
                decoding="async"
                itemprop="image">
        </picture>
    </div>
</header>

<!-- Hero Image - Mobile -->
<div class="lg:hidden relative w-full h-[300px]">
    <img
        src="/assets/images/perito-construccion-obra-edificacion-640.avif"
        alt="Perito experto realizando inspección técnica"
        class="w-full h-full object-cover opacity-80"
        loading="eager"
        decoding="async"
        itemprop="image">
</div>
{% endblock content %}

{% block scripts %}

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const phrases = [
                "CON RIGOR TÉCNICO",
                "QUE RESUELVEN CONFLICTOS",
                "QUE MARCAN LA DIFERENCIA",
                "QUE GANAN CASOS"
            ];
            
            const rotator = document.getElementById('heroTextRotator');
            let currentIndex = 0;
            
            function rotateText() {
                rotator.style.opacity = '0';
                
                setTimeout(() => {
                    currentIndex = (currentIndex + 1) % phrases.length;
                    rotator.textContent = phrases[currentIndex];
                    rotator.style.opacity = '1';
                }, 500);
            }

            // Cambiar cada 4 segundos
            setInterval(rotateText, 4000);
        });
    </script>

{% endblock scripts %}